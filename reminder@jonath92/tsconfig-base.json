{
    "compilerOptions": {
        "lib": [
            // important to hide default typescript libraries (such as DOM elements): https://stackoverflow.com/questions/57336918/disable-intellisense-for-default-typescript-libraries-in-vscode
            "ESNext"
        ],
        "moduleResolution": "Node",
        "sourceMap": true,
        "target": "es2017",
        "baseUrl": "./src/",

        // STRICT CONFIGURATION
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
    }
}